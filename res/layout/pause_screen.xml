<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/keepGoingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:text="@string/keep_going_button" />

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keepGoingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="@string/main_menu_button" />

     <TextView
         android:id="@+id/CurrentScore"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/CurrentestScore"
         android:layout_alignBottom="@+id/CurrentestScore"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="28dp"
         android:text="@string/current_scores"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/CurrentestScore"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="51dp"
         android:layout_toRightOf="@+id/keepGoingButton"
         android:text="0"
         android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>