<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:text="@string/start_button" />

    <Button
        android:id="@+id/scoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="@string/scores_button" />

     <TextView
         android:id="@+id/HighScore"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/HigestScore"
         android:layout_alignBottom="@+id/HigestScore"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="28dp"
         android:text="@string/high_scores"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/HigestScore"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="51dp"
         android:layout_toRightOf="@+id/scoresButton"
         android:text="0"
         android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>